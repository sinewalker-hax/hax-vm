#-*- mode:sh -*-
source /vagrant/bootstrap/00-defs
source /vagrant/bootstrap/nodejs

banner nikola

zyp libxml2-devel
zyp libxslt-devel
zyp zlib-devel
zyp python3-dbm
zyp python3-lxml
zyp python3-Pillow

if ! [ -d /home/vagrant/lib/nikola ]; then
    mkdir -p /home/vagrant/lib/nikola
    pushd /home/vagrant/lib
    virtualenv-3.4 nikola
    cd nikola
    source bin/activate
    pip install --upgrade pip
    pip install --upgrade "Nikola[extras]"
    deactivate
    popd
fi

[ -L /home/vagrant/blog ] || ln -s /hax/blog /home/vagant/blog

#sudo pip3 install -r /home/vagrant/blog/notes/requirements.txt
